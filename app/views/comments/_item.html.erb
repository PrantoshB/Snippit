<div class="comment">
  <div class="comment__voting">
    <button type="button">+</button>
    <span>5</span>
    <button type="button">-</button>
  </div>
  <div class="comment__content">
    <header class="comment__header">
      <div class="comment__infos">
        <%= render 'shared/author_icon', author: comment.user %>
        <div>
          <%= link_to contributor_path(comment.user) do %>
            <p class="comment__author"><%= comment.user.name %></p>
          <% end%>
          <p class="comment__date"><%= comment.created_at.strftime("%b %e, %Y") %> </p>
        </div>
      </div>
      <div class="comment__actions">
        <% if current_user == comment.user %>
          <%= button_to "❌ Delete", code_snippet_comment_path(comment.code_snippet, comment), method: :delete, class: "del-btn" %>
        <% end %>
      </div>
    </header>
    <div class="comment__body">
      <p><%= comment.content %></p>
    </div>
  </div>
</div>
