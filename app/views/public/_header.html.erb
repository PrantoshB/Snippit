<header class="main-header">
  <%= link_to "Snippit", root_path, class: "brand-title"%>
  <nav>
    <ul style="display: flex; gap: 1rem; list-style: none">
      <li><%= link_to "All Snippets", code_snippets_path, class: "link" %></li>
      <li><%= link_to "New snippet", new_code_snippet_path , class: "link"%></li>
      <li><%= link_to "Contributors", contributors_path, class: 'link' %></li>
    </ul>
   <% if current_user %>
      <%= form_with url: destroy_user_session_path, method: :delete do |f| %>
        <%= f.submit "Log Out", class: "btn btn-outline"%>
      <% end %>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-outline" %>
      <%= link_to "Register", new_user_registration_path, class: "btn btn-outline" %>
    <% end %>
  </nav>
</header>

<%= render 'public/alert' %>