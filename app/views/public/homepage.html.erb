<h1>Snipit</h1>

<nav>
    <ul style="display: flex; gap: 1rem; list-style: none">
        <li><%= link_to "All Snippets", code_snippets_path %></li>
        <li><%= link_to "Create new snippet", new_code_snippet_path %></li>
        <li><%= link_to "Log in", new_user_session_path %></li>
        <li><%= link_to "Register", new_user_registration_path %></li>
    </ul>
    <% if current_user %>
        <%= form_with url: destroy_user_session_path, method: :delete do |f| %>
            <%= f.submit "Log Out"%>
        <% end %>
    <% end %>
</nav>

<section>
    <h2>Write better code with Code Snippets</h2>
    <p>Find and share code snippets to help you solve problems and save time. Join our community of developers today.</p>
    <button type="button">Get Started</button>
</section>

