<section class="page-container">
  <div class="auth-form-container">
    <h2>Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "example@email.com", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'password', autocomplete: "current-password", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="check-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: 'auth-btn' %>
      </div>
    <% end %>
    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
