<div class="snippet-item">
    <h3><%= link_to snippet.title, code_snippet_path(snippet), class: "link" %></h3>

    <h4>by <%= snippet.user.name %></h4>
    
    <pre><code class=<%= "language-" + snippet.language %>><%= snippet.code %></code></pre>
    <div>
        <small><%= pluralize(snippet.stars_counter, 'star') %></small>
        <small><%= pluralize(snippet.comments_counter, 'comment') %></small>
    </div>
</div>